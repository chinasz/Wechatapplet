<!--activity.wxml-->
<view class='shaiX' bindtap='screen'>
  <image class='sxT' src='../image/shaixuan.png'></image>
</view>
<view class='wenZ'>心动区</view>
<view class='heartbeat' bindtap='go'>
  <image class='jiantou' src='../image/jiantou.png'></image>
  <block wx:if="{{heart}}" wx:for="{{heart}}" wx:for-item="h" wx:key="">
    <image class='touxiang' src='{{h.member_avatar}}'></image>
  </block>
</view>

<image class='dingB' src='../image/ding.png'></image>
<view class='beiJing'>
  <image class='logo' src='../image/5logo.png'></image>
</view>
<image class='back' src='../image/ding.png'></image>
<view class="myRecode">
  <view class="recode"></view>
  <view class="recode"></view>
  <view class="recode"></view>
  <block wx:if="{{prefect}}">
    <block wx:if="{{prefect.time}}">
      <view class="recode" id="recode" bindtap='flush'>
        <text class='maF'>立即刷新</text>
        <text class='tui-countdown-content'>
          {{time}}
        </text>
      </view>
    </block>
    <block wx:else>
      <view class="recode" id="recode">
        <image src="{{prefect.member_avatar}}"></image>
        <text style="font-size:80rpx;color:#fff;" bindtap='attract'>√</text>
      </view>
    </block>
  </block>
  <block wx:else>
    <view class="recode" id="recode">
      <text>暂无匹配结果</text>
    </view>
  </block>
</view>
<image class='candidate' src='../image/houX.png'></image>
<view class='text'>(本周五晚8点开始确定CP)</view>

<view wx:if="{{mutual}}" class='bottom_T'>
  <block wx:for="{{mutual}}" wx:for-item="love" wx:key="">
    <image class='bottom_Tx' src='{{love.member_avatar}}'></image>
  </block>
</view>
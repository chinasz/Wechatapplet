/*tone.wxss*/
page{
  overflow-x: hidden;
}
.dingB{
  width: 100%;
  height: 80rpx;
  background: #0091fe;
  padding: 20rpx 0;
}
.dingB .shu{
  width: 15rpx;
  height: 80rpx;
  float: left;
  margin-left: 3%;
  margin-right: 5%;
}
.dingB .tex{
  font-size: 35rpx;
  color: #FFF;
  line-height: 80rpx;
  float: left;
}
.dingB .dianJ{
  width: 140rpx;
  height: 60rpx;
  font-size: 30rpx;
  color: #FFF;
  background: #37a4ff;
  text-align: center;
  line-height: 60rpx;
  float: right;
  border-radius: 50rpx;
  margin-top: 1.3%;
  margin-right: 3%;
}
.text{
  width: 100%;
  height: 500rpx;
  background: #0091fe;
}
.text .text_W{
  width: 90%;
  height: 500rpx;
  margin: 0 auto;
  border-radius: 30rpx;
  background: #FFF;
}
.text .text_W .text_T{
  width: 90%;
  height: 100rpx;
  font-size: 35rpx;
  color: #000;
  line-height: 130rpx;
  border-bottom: 2rpx solid #e6e6e6;
  margin: 0 auto;
}
.text .text_W .taiC{
  width: 90%;
  font-size: 30rpx;
  color: #616161;
  margin: 0 auto;
  line-height: 60rpx;
}
.zhongJ{
  width: 100%;
  height: 600rpx;
  background: #0091fe;
  overflow: hidden;
}
.zhongJ .maiB{
  width: 200rpx;
  height: 200rpx;
  background: #FFF;
  border-radius: 50%;
  margin: 0 auto;
  overflow: hidden;
  margin-top: 31%;
}
.zhongJ .maiB:hover{
  width: 197rpx;
  height: 197rpx;
  border: 3rpx solid #e12412;
}
.recode .mai{
  width: 58rpx;
  height: 76rpx;
  display: block;
  margin: 0 auto;
  margin-top: 32%;
}
.luY{
  width: 100%;
  font-size: 25rpx;
  color: #FFF;
  text-align: center;
  margin-top: 5%;
}



.myRecode{
  margin-top: 20%;
  text-align: center;
  box-sizing: border-box;
}
.myRecode .recode{
  display: inline-block;
  width:200rpx;
  height:200rpx;
  background: #FFF;
  border-radius: 50%;
  text-align: center;
  color:#fff;
  line-height: 200rpx;
  position: relative;
}
.ripple{
  position: absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  border-radius: 50%;
  border:2px solid #F6F1CC;
}